// java.d.ts (MODYFIKUJEMY ISTNIEJĄCY PLIK)

declare namespace java { // Zostawiamy istniejącą przestrzeń nazw
    namespace io { // Zostawiamy istniejącą przestrzeń nazw
        class File {
            constructor(pathname: string);
            constructor(parent: string, child: string);
            getPath(): string;
        }

        class FileReader {
            constructor(file: java.io.File);
            close(): void;
        }

        class BufferedReader {
            constructor(reader: java.io.Reader);
            readLine(): string | null;
            close(): void;
        }

        interface Reader { }
    }

    namespace lang { // Dodajemy przestrzeń nazw 'lang'
        class System { // Dodajemy klasę System
            static getProperty(key: string): string | null;
            static setProperty(key: string, value: string): string | null;
        }
    }
}


// Rozszerzamy globalny interfejs, dodając System
declare global {
  var System: java.lang.System; // Teraz odwołujemy się do java.lang.System
  var Java: { type(className: string): any }; //Deklaracja dla Java
}
