<script>
    document.addEventListener('DOMContentLoaded', () => {
        const intersectionObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('in-view');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.animated-section, .pyramid-container').forEach(el => {
            intersectionObserver.observe(el);
        });

        const e2eContainer = document.getElementById('e2e-container');
        if (!e2eContainer) return;

        const animationButton = document.getElementById('run-animation-btn');
        if (animationButton) {
             const stations = [
                { el: document.getElementById('station-1'), text: 'Deweloper wysyła kod do repozytorium Azure' },
                { el: document.getElementById('station-2'), text: 'Azure Pipelines automatycznie buduje obraz Docker' },
                { el: document.getElementById('station-3'), text: 'Nowy obraz jest umieszczany w Rejestrze Kontenerów' },
                { el: document.getElementById('station-4'), text: 'Test jest wywoływany przez CLI lub automatycznie' },
                { el: document.getElementById('station-5'), text: 'Kubernetes uruchamia testy w nowym, izolowanym podzie' },
                { el: document.getElementById('station-6'), text: 'Wyniki i raporty są zapisywane w Azure Blob Storage' },
                { el: document.getElementById('station-7'), text: 'Portal z raportami wizualizuje wyniki testów' }
            ];

            let tooltip = document.createElement('div');
            tooltip.className = 'tooltip';
            document.getElementById('tooltip-container').appendChild(tooltip);

            let currentStationIndex = -1;
            let animationInterval;

            function runAnimation() {
                clearInterval(animationInterval);
                animationButton.disabled = true;
                currentStationIndex = -1;
                stations.forEach(s => s.el.classList.remove('active'));
                tooltip.classList.remove('visible');

                // Start immediately
                setTimeout(nextStep, 100);
            }

            function nextStep() {
                currentStationIndex++;
                if (currentStationIndex >= stations.length) {
                    clearInterval(animationInterval);
                    stations.forEach(s => s.el.classList.remove('active'));
                    tooltip.classList.remove('visible');
                    animationButton.disabled = false;
                    return;
                }

                stations.forEach((s, index) => {
                    if (index === currentStationIndex) {
                        s.el.classList.add('active');
                        tooltip.textContent = s.text;

                        const stationRect = s.el.getBoundingClientRect();
                        const containerRect = e2eContainer.getBoundingClientRect();

                        tooltip.style.left = `${stationRect.left - containerRect.left + stationRect.width / 2 - tooltip.offsetWidth / 2}px`;
                        tooltip.style.top = `${stationRect.top - containerRect.top - tooltip.offsetHeight - 10}px`;
                        tooltip.classList.add('visible');
                    } else {
                        s.el.classList.remove('active');
                    }
                });
                 animationInterval = setTimeout(nextStep, 2000);
            }

            animationButton.addEventListener('click', runAnimation);
        }
    });
</script>
</body>
</html>
