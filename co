pool:
  name: 'BSK-only-agent-pool'

variables:
  harborServiceConnection: 'P08399-Harbor-PUSH'
  
  imageRepository: 'moj-nowy-obraz'
  
  dockerfilePath: 'Dockerfile'

stages:
- stage: BuildAndPush
  displayName: Build and Push to Harbor
  jobs:
  - job: Build
    displayName: Build Docker image
    steps:
    - task: Docker@2
      displayName: Build and push image to Harbor
      inputs:
        containerRegistry: $(harborServiceConnection)
        repository: $(imageRepository)
        command: 'buildAndPush'
        Dockerfile: $(dockerfilePath)
        tags: |
          $(Build.BuildId)
