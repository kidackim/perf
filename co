# Instalacja narzędzia do pobierania (np. curl) i rozpakowywania (unzip)
RUN apt-get update && apt-get install -y curl unzip

# Pobranie pliku .zip
RUN curl -L -k https://cdn.cypress.io/desktop/13.14.1/platform=linux&arch=x64.zip -o cypress.zip

# Rozpakowanie pliku .zip do katalogu /opt
RUN unzip cypress.zip -d /opt/

# Usunięcie archiwum
RUN rm cypress.zip

# Ustawienie zmiennej PATH, aby komendy Cypress były dostępne globalnie
ENV PATH="/opt/cypress/bin:${PATH}"
