- script: |
    if [ "$(Agent.JobStatus)" == "Succeeded" ]; then
      STATUS="Success"
      STATUS_COLOR="green"
    elif [ "$(Agent.JobStatus)" == "Failed" ]; then
      STATUS="Failure"
      STATUS_COLOR="red"
    else
      STATUS="Warning"
      STATUS_COLOR="orange"
    fi

    MAIL_TO=$(parameters.recipient1),$(parameters.recipient2),$(parameters.recipient3)

    cd playbooks
    ansible-playbook "scripts/send-test-results-mail.yml" \
    --extra-vars '{"mail_to": "'"$MAIL_TO"'", "status": "'"$STATUS"'", "status_color": "'"$STATUS_COLOR"'", "build": "$(Build.BuildNumber)", "project_url": "https://dev.azure.com/IngEurCdaaS01/IngOne/_build/results?buildId=$(Build.BuildId)", "attachments": ["$(System.DefaultWorkingDirectory)/playbooks/fetched_reports/junit_report_from_log.xml", "$(System.DefaultWorkingDirectory)/playbooks/fetched_target_archive/archive.zip"]}'
  displayName: 'Send Test Results by Mail'
  condition: always()
  env:
    SYSTEM_ACCESSTOKEN: $(System.AccessToken)
