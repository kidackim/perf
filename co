        echo "Executing docker load command on specified host."

        # Upewnij się, że zmienna Build.BuildId z Twojego pipeline'u
        # zawiera PEŁNĄ nazwę folderu, np. "20037686-md77tvvg".
        # Jeśli Build.BuildId to tylko "20037686", to musimy znaleźć sposób na resztę nazwy.
        # Na podstawie Twoich poprzednich zapytań i tego co widać w "CDASContainerScanning@2"
        # image name: p08399/gatling-test:$(Build.BuildId)
        # Zakładam, że $(Build.BuildId) jest pełnym unikalnym tagiem/ID.
        
        # Nazwa FOLDERU, w którym znajduje się obraz .tar
        # np. skopeoCopy-gatling-test-20037686-md77tvvg
        DOCKER_IMAGE_FOLDER_NAME="skopeoCopy-gatling-test-$(Build.BuildId)"
        
        # Pełna ścieżka do katalogu, gdzie jest plik .tar
        # np. /app/docker/images/skopeoCopy-gatling-test-20037686-md77tvvg
        DOCKER_FULL_PATH="/app/docker/images/${DOCKER_IMAGE_FOLDER_NAME}"
        
        # Nazwa pliku .tar wewnątrz folderu
        # np. gatling-test-20037686.tar
        DOCKER_TAR_FILE="gatling-test-$(Build.BuildId).tar"
        
        # Pełna ścieżka do pliku .tar
        DOCKER_TAR_FULL_PATH="${DOCKER_FULL_PATH}/${DOCKER_TAR_FILE}"

        ansible all -i '${{ parameters.hostname }},' \
          -m ansible.builtin.shell \
          -a "cd ${DOCKER_FULL_PATH} && docker load -i ${DOCKER_TAR_FILE}" \
          -e "ansible_user: ${{ parameters.hostname }}-USER ansible_password: ${{ parameters.hostname }}-PASS"
          # Pamiętaj o bezpieczeństwie hasła!
          # I o definicji parametru hostname z pełnym FQDN/IP.

      displayName: 'Perform docker load on remote host'
      condition: succeeded()
