# Etap pierwszy - bazowy
FROM node:21-alpine AS base

WORKDIR /app

# Instalacja niezbędnych narzędzi w jednej warstwie
RUN apk add --no-cache dumb-init wget && \
    wget --no-check-certificate -O /usr/local/bin/jq -qc https://github.com/stedolan/jq/releases/download/jq-1.6/jq-linux64 && \
    chmod +x /usr/local/bin/jq

# Konfiguracja środowiska
ENV NODE_TLS_REJECT_UNAUTHORIZED=0

# Etap drugi - instalacja zależności
FROM base AS dependencies

# Kopiowanie tylko plików package.json
COPY package*.json ./

# Instalacja zależności
RUN npm config set strict-ssl false && \
    npm ci --only=production

# Etap trzeci - finalny
FROM base AS final

WORKDIR /app

# Kopiowanie tylko zainstalowanych zależności
COPY --from=dependencies /app/node_modules ./node_modules

# Kopiowanie kodu źródłowego
COPY . .

# Przygotowanie pliku konfiguracyjnego
RUN cp sample.env .env

# Uruchomienie jako użytkownik niepriwilegowany
USER node

# Uruchomienie aplikacji z poprawną obsługą sygnałów
CMD ["dumb-init", "/bin/sh", "-c", "npm run test"]
