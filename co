# Instalacja niezbędnych zależności systemowych
# Używamy --disablerepo i --enablerepo, aby uzyskać dostęp do pakietów
RUN microdnf update && \
    microdnf install -y \
    fontconfig \
    freetype \
    libX11 \
    libXext \
    libXrender \
    libXtst \
    libasound \
    libgbm \
    libxkbcommon \
    mesa-libGL \
    nss \
    && \
    microdnf clean all
