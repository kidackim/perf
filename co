tasks:
    # === NOWY TASK DIAGNOSTYCZNY ===
    - name: Verify current user and groups
      ansible.builtin.shell: |
        whoami
        id
        groups
      register: user_info
      # Upewnij się, że ten task też działa jako appown
      become: true
      become_user: appown
      become_method: sudo

    - name: Display current user and groups
      ansible.builtin.debug:
        msg: |
          "Current user: {{ user_info.stdout }}"
          "User ID info: {{ user_info.stdout_lines[1] | default('N/A') }}" # Druga linia z 'id'
          "User groups: {{ user_info.stdout_lines[2] | default('N/A') }}" # Trzecia linia z 'groups'
