 - script: |
        echo "Executing 'docker load' on specified host"
        cd $(System.DefaultWorkingDirectory)/playbooks/
        ansible-playbook docker_load.yml \
        -i stix04021.ping.ad \
        -e ansible_user='$(parameters.hostname)' \
        -e ansible_password='$(parameters.hostname | PASS)' \
        -e "build_id_from_pipeline=$(Build.BuildId)" \
        -e "image_to_run_name=p08399hceacr.azurecr.io/p08399/gatling-test:$(Build.BuildId)" \
        -e "TOKEN_PASSWORD=$(TOKEN_PASSWORD)" \
        -e "GATLING_USERS=$(GATLING_USERS)" \
        -e "SIMULATION_NAME=$(SIMULATION_NAME)"
      displayName: 'Perform docker load on remote host'
      condition: succeeded()
