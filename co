- name: Find all JUnit XML files
  ansible.builtin.find:
    paths: "{{ junit_xml_path }}"
    patterns: "*.xml"
  register: xml_files

- name: Parse each XML file and set fact
  ansible.builtin.set_fact:
    test_results_data: >
      {{ xml_files.files | map(attribute='path') | map('from_json') | list }}
